{
  "name": "vite-vue-ts-starter",
  "type": "module",
  "version": "0.1.0",
  "author": "zhixiangyao <blueskyzx@icloud.com> <https://github.com/zhixiangyao>",
  "license": "MIT",
  "homepage": "https://github.com/zhixiangyao/vite-vue-ts-starter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhixiangyao/vite-vue-ts-starter.git"
  },
  "engines": {
    "node": ">=24.13.0",
    "pnpm": ">=10.29.3"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc -b && vite build",
    "preview": "npm run build && vite preview",
    "preview:dist": "vite preview",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/",
    "lint:css": "stylelint \"./**/*.{vue,css}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint-staged": "lint-staged",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "nprogress": "0.2.0",
    "pinia": "3.0.4",
    "vue": "3.5.28",
    "vue-router": "5.0.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "7.4.3",
    "@types/node": "24.10.13",
    "@types/nprogress": "0.2.3",
    "@typescript-eslint/eslint-plugin": "8.55.0",
    "@vitejs/plugin-vue": "6.0.4",
    "@vitejs/plugin-vue-jsx": "5.1.4",
    "@vue/compiler-sfc": "3.5.28",
    "@vue/tsconfig": "0.8.1",
    "eslint": "10.0.0",
    "lint-staged": "16.2.7",
    "postcss": "8.5.6",
    "postcss-html": "1.8.1",
    "postcss-load-config": "6.0.1",
    "simple-git-hooks": "2.13.1",
    "stylelint": "17.2.0",
    "stylelint-config-recommended-vue": "1.6.1",
    "stylelint-config-standard": "40.0.0",
    "stylelint-order": "7.0.1",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "unplugin-auto-import": "21.0.0",
    "unplugin-vue-components": "31.0.0",
    "vite": "7.3.1",
    "vue-tsc": "3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --cache --cache-location node_modules/.cache/eslint/"
    ],
    "./**/*.{vue,css}": [
      "stylelint --cache --cache-location node_modules/.cache/stylelint/"
    ]
  }
}
